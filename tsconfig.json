{
    "compilerOptions": {                        
      "target": "es6",                               
      "module": "commonjs",                           
      "outDir": "./dist",                             
      "rootDir": "./src",                             
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,    
      "typeRoots" : ["./src/types", "./node_modules/@types"]                 
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }